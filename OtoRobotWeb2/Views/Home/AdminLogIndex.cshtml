                                <div class="row">
                                    <div class="col-3">
                                        <label id="date_bitis_label" class="col-form-label fw-bold fs-5">Bitiş Tarihi :</label>
                                    </div>
                                    <div class="col-3">
                                        <input type="date" class="form-control" name="date_bitis" value="@Model.Date_Bitis.ToString("yyyy-MM-dd")">
