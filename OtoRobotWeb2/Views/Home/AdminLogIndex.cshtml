                                    {

                                        <tr>
                                            <td>

                                                <div class="row mb-3  font-weight-bold fs-5 bg-warning">
                                                    <div class="col-4"> Sorgu Toplamı</div>
                                                    <div class="col-4">@Model.Total</div>
                                                </div>

                                            </td>
                                        </tr>



                                    }
                                </tbody>
                            </table>

                        </div>

